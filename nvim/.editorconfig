root = true

[*]
indent_style = space
indent_size = 4

end_of_line = LF
charset = UTF-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
indent_style = space
indent_size = 4

[*.html{,.twig}]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.feature]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
max_line_length = 80

[*.neon]
indent_style = space
indent_size = 4

[composer.json]
indent_style = space
indent_size = 4

[phpunit.xml{,.dist}]
indent_style = space
indent_size = 4

[*.lua]
indent_style = space
indent_size = 2
